{
  "extends": "next/core-web-vitals",
  "rules": {
    "indent": ["error", 2],
    "no-console": ["error", { "allow": ["warn", "error"] }],
    "semi": ["error", "never"],
    "quotes": ["error", "single"],
    "sort-imports": "error",
    "no-unused-vars": "error",
    "max-len": ["error", { "code": 120 }]
  }
}
